<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="EditTextLogin">
        <item name="android:layout_marginTop">10px</item>
        <item name="android:layout_width">400px</item>
        <item name="android:layout_height">60px</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
    </style>
    <style name="ButtonLogin">
        <item name="android:layout_marginTop">20px</item>
        <item name="android:layout_height">50px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/btn_master</item>
    </style>

</resources>